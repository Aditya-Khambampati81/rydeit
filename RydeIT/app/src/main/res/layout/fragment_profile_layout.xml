<?xml version="1.0" encoding="utf-8"?>

<!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="match_parent"--><!--android:layout_height="0dip"--><!--android:orientation = "vertical"--><!--android:weightSum="7.5">-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="5dip"
        android:layout_gravity="center_vertical"
        android:id="@+id/parent_layout"
        android:orientation="vertical">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/profileimage"
            android:gravity="center"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:background="@drawable/person"
            android:src="@drawable/circleoutline"
            android:layout_marginTop="40dip"
            android:layout_marginBottom="20dip"
            android:layout_width="120dip"
            android:layout_height="120dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/actionbar_bg"/>


        <TextView

            android:layout_marginLeft="10dip"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Profile Name : "
            android:gravity="left"
            android:layout_gravity="left"
            android:textColor="@color/actionbar_bg"
            android:textSize="14sp"></TextView>

        <TextView

            android:layout_marginLeft="10dip"
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Email : "
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="@color/actionbar_bg"
            android:textSize="14sp"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/actionbar_bg"/>

        <LinearLayout
            android:layout_marginLeft="10dip"
              android:id="@+id/paytm"
              android:clickable="true"
              android:background="@drawable/background"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="10dp"
            >


            <ImageView
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:src="@drawable/paytm"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:layout_gravity="center"
                android:text="@string/add_paytm_cash"
                android:textStyle="bold|italic"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/actionbar_bg"/>

        <LinearLayout
            android:clickable="true"
            android:background="@drawable/background"
            android:layout_marginLeft="10dip"
            android:id="@+id/olacash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >


            <ImageView
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:src="@drawable/ola_money"
                android:scaleType="fitXY"
                />
            <TextView
                android:paddingLeft="10dip"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_ola_cash"
                android:textStyle="bold|italic"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/actionbar_bg"/>

        <TextView

            android:id="@+id/promocode"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="@string/logout"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/button_drawable"
            android:textColor="@color/actionbar_title_txt_color"
            >

        </TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/actionbar_bg"/>

    </LinearLayout>

</ScrollView>
</FrameLayout>