<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rydeit.view.SplashScreen">

    <TextView
        android:id="@+id/splashscreen_tagtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/apptagline"
        android:textColor="@color/actionbar_title_txt_color"
        android:textSize="15dip"
        android:textStyle="italic" />
    <ImageView
        android:id="@+id/splashscreen_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/splashscreen_tagtext"
        android:src="@drawable/splashscreenlogo9" />




</RelativeLayout>
