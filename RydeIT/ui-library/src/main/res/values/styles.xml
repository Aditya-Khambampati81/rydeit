<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ListItemText" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="MyBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/actionbar_bg</item>
        <item name="colorPrimaryDark">@color/hex_gray</item>
        <item name="colorAccent">@color/actionbar_title_txt_color</item>


    </style>



    <style name="MyBaseActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


</resources>